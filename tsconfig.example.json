{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es5",
    "lib": [
      "dom",
      "es6",
      "es7"
    ],
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "lib",
    "examples/build"
  ],
  "include": [
    "examples/src"
  ]
}
